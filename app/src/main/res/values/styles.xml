<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="error_message">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="no_reservations_msg">
        <item name="android:textSize">@dimen/big_txt_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/huge_padding</item>
    </style>
    <style name="title">
        <item name="android:textSize">@dimen/big_txt_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="centered_medium_text">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textArea">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top|left</item>
        <item name="android:lines">8</item>
        <item name="android:maxLength">200</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/little_gray</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>