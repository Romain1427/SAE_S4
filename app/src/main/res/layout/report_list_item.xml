<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:stretchColumns="2">
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        android:background="#000000" />
    <TextView
        android:id="@+id/report_item_reservation"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/reservation_name_report"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/report_item_summary"
        android:text="Resume_holder"
        android:layout_marginTop="@dimen/small_margin"
        android:textSize="25sp"/>

    <TextView android:text="Description_holder"
        android:id="@+id/report_item_description"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="18sp"/>
    <TableRow
        android:layout_marginTop="10dp">
        <TextView android:text="Severity_holder"
            android:id="@+id/report_item_severity_holder"
            android:textSize="18sp"/>
        <TextView android:text="Severity_desc_holder"
            android:id="@+id/report_item_severity_desc_holder"
            android:layout_marginStart="@dimen/spaced_item"
            android:layout_width="200dp"
            android:textSize="18sp"/>
    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:layout_height="1dp"
        android:background="#000000" />
    <TableRow>
        <Button
            android:id="@+id/btn_modify_report"
            android:text="Modifier"/>
        <Button
            android:id="@+id/btn_delete_report"
            android:text="Supprimer"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="60dp"/>
    </TableRow>
</TableLayout>